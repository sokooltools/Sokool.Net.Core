@using Microsoft.EntityFrameworkCore.Query.Internal
@model EditRoleViewModel

<h1>Edit Role</h1>

<form method="post" class="mt-3">
	<div class="form-group">
		<label asp-for="Id" class=".col-form-label col-md-2 h5"></label>
		<div class="col-md-10">
			<input asp-for="Id" disabled class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<label asp-for="RoleName" class=".col-form-label col-md-2 h5"></label>
		<div class="col-md-10">
			<input asp-for="RoleName" class="form-control" />
			<span asp-validation-for="RoleName" class="text-danger"></span>
		</div>
	</div>
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<div class="col-sm-10">
			<button type="submit" value="Update" class="btn btn-primary">Update</button>
			<a asp-controller="Administration" asp-action="ListRoles" class="btn btn-primary">Cancel</a>
		</div>
	</div>
	<div class="card">
		<div class="card-header">
			<h3>Users in this role</h3>
		</div>
		<div class="card-body">
			@if (Model.Users.Any())
			{
				foreach (string user in Model.Users)
				{
					<h5 class="card-title">@user</h5>
				}
			}
			else
			{
				<h5 class="card-title">None at the moment</h5>
			}
		</div>
		<div class="card-footer">
			<a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleid="@Model.Id" class="btn btn-primary w-auto">Add or Remove Users</a>
		</div>

	</div>

</form>